div(ng-controller="tabsController")
		ul#tabs
			li(ng-class="{active: activeTab(1)}" ng-click="setActive(1)") About	
			li(ng-class="{active: activeTab(2)}" ng-click="setActive(2)") Work	
			li(ng-class="{active: activeTab(3)}" ng-click="setActive(3)") Contact	
		section
			article(ng-show="activeTab(1)")
				div(ng-repeat="card in models[0]" class="element", ng-show="hasAbout")
					p {{card.description}}
					p {{card.photo}}
					div
						button.btn.btn-default.btn-sm.btn-primary(type='button', ng-click="updateModal($index, 0)")
							|	UPDATE
					div
						button.btn.btn-default.btn-sm.btn-danger(type='button', ng-click="deleteModal($index, 0)")
							|	DELETE
				button.btn.pull-right.btn-default.btn-sm.btn-warning(type='button', ng-show="!hasAbout", ng-click="postModal(0)")
						|	ADD
			article(ng-show="activeTab(2)")
				h2 Area of Work
				div.container-fluid
					div.row(ng-repeat="work in models[1]")
						div.col-xs-6
							div {{work.name}}
						div.col-xs-3
							button.btn.btn-default.btn-sm.btn-primary(type='button', ng-click="updateModal($index, 1)")
								|	UPDATE
						div.col-xs-3
							button.btn.btn-default.btn-sm.btn-danger(type='button', ng-click="deleteModal($index, 1)")
								|	DELETE
					button.btn.btn-default.btn-sm.btn-default(type='button', ng-click="postModal(1)")
							|	ADD
				h2 Projects
				div.container-fluid
					div.row(ng-repeat="project in models[2]")
						div.row
							div.col-xs-6
								.row
									{{project.title}}
								.row
									{{project.detail}}
							div.col-xs-6
								img(ng-src="{{project.img}}")
						div.row
							div.col-xs-6
								{{project.url}}
							div.col-xs-6
								{{project.work.name}}
						div.row
							div.col-xs-6
								
							div.col-xs-3
								button.btn.btn-default.btn-sm.btn-primary(type='button', ng-click="updateModal($index, 2)")
									|	UPDATE
							div.col-xs-3
								button.btn.btn-default.btn-sm.btn-danger(type='button', ng-click="deleteModal($index, 2)")
									|	DELETE
					button.btn.btn-default.btn-sm.btn-default(type='button', ng-click="postModal(2)")
						|	ADD
			article(ng-show="activeTab(3)")
				h2 Contact